html(class="", lang="en")
    // <![endif]
    
    head
      title #{title}
      meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet', href='#{media_root}/css/main.css')
      link(href="http://fonts.googleapis.com/css?family=Merienda+One", rel="stylesheet", type="text/css")
      block extrahead
    body
      // Fixed navbar
      -var menu = { 'Hjem': '#hjem', 'Videoer': '#videoer', 'Referanser': '#referanser', 'Kontakt': '#kontakt'};

      .navbar.navbar-transparent.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#{base_url}#{menu.Hjem}')
              img(src='#{base_url}/hallem-logo.png', alt='Frode Hallem')
          .navbar-collapse.collapse.navbar-right
            ul.nav.navbar-nav
              each val, key in menu
                if selected === key
                  li.active
                    a(href='#{base_url}#{val}') #{key}
                else
                  li
                    a(href='#{base_url}#{val}') #{key}


      article
        block content
      footer#kontakt
